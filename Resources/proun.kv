#:kivy 1.9.1
<pant1>:
	id: screen_manager

	Screen: 
		name: "inipant"

		GridLayout:
			cols: 1 
			spacing: 100
		BoxLayout:
			orientation: "vertical"
			padding: 10
			canvas:
				Color:
					rgb: 1,1,1,1
				Rectangle:
					pos: self.pos
					size: self.size
					source: 'splashArt.png'
			Button:
				text: ""
				on_release: root.current = "LoginScreen"
				
				background_color: 0, 0, 0, 0
								
	
			


<LoginScreen>:
	name: "LoginScreen"

	AnchorLayout:
		anchor_x: 'center'
        anchor_y: 'center'
		spacing: 30
		padding: 30,30,30,30
		canvas:
			Color:
				rgb: 1,1,1
			Rectangle:
				size: self.size
				pos: self.pos
				source:'fondo4.jpg'

		RelativeLayout:
			size_hint: None, None
			size: 300, 300
			pos: 50,200
			canvas:
				Color:
					rgb: 0,0.6,0.5
				Rectangle:
					size: self.size
					pos: 0,0
					source:'limpio.png'

			Label:
				text:'Username:'
				font_size: 0.055*self.height
				pos:  [-160,65]

			Label:
				text:'Password:'
				font_size: 0.055*self.height
				pos:  [-160,5]

			TextInput:
				id: texto1
				multiline:False
				background_color: 0, 0, 0, 0.4
				size_hint:[None,None]
				size:  [300,35]
				pos:  [30,190]
				text: ''

			TextInput:
				id: texto2
				password: True
				multiline:False
				background_color: 0, 0, 0, 0.4
				size_hint:[None,None]
				size:  [300,35]
				pos:  [30,130]
				text: ''
				
			Button:
				size_hint:[None,None]
				pos: 10, 15
				height: 50
				width: 150
				text: 'Login'
				background_color: 1, 0, 0.1, 0.6
				on_release: root.login22()

			Button:
				size_hint:[None,None]
				pos: 180, 15
				height: 50
				width: 150
				text: 'Create account'
				background_color: 0, 0.5, 1, 0.6
				on_release: root.manager.current = "screen4"

				
				
				
				
				
