# Popup de usuario Existente.
<LoginButton>:
    on_press: self.Login()
<LoginPopup>:
    id: Login
    size_hint: .7, .2
    auto_dismiss: False
	source: 'limpio.png'

    title: 'Los datos se guardaron correctamente.'
	
    Button:
        text: 'Continuar'
		background_color: 0.9,0,0,0.3
        on_release:  
			Login.dismiss()
			
			



 # Popup de usuario Existente.
<SimpleButton>:
    on_press: self.popup()
<SimplePopup>:
    id:usuarioExiste
    size_hint: .4, .2
    auto_dismiss: False
    title: 'El nombre de usuario ya existe, pruebe otro.'
    Button:
        text: 'Entendido'
        on_press: usuarioExiste.dismiss()


# Popup de que no concuerdan las claves
<FalloClaveButton>:
    on_press: self.FalloClave()
<FalloClavePop>:
    id:clave
    size_hint: .4, .2
    auto_dismiss: False
    title: 'Las claves no concuerdan, pruebe de nuevo.!!'
    Button:
        text: 'Entendido!'
        on_press: clave.dismiss()


# Popup de campos no llenos
<TodoLlenoButton>:
    on_press: self.TodoLleno()
<TodoLlenoPop>:
    id:Llenar
    size_hint: .5, .2
    auto_dismiss: False
    title: 'Todos los espacios deben estar llenos.!!'
    Button:
        text: 'Entendido!'
        on_press: Llenar.dismiss()


# Popup de Datos Erroneos
<DatosErrorButton>:
    on_press: self.DatosError()
<DatosErrorPop>:
    id:Error
    size_hint: .7, .2
    auto_dismiss: False
    title: 'Nombre de usuario o clave incorrecta, pruebe de nuevo.!!'
    Button:
        text: 'Entendido!'
        on_press: Error.dismiss()
